<div class="page-container user-settings-page">
  <div class="page-header">
    <h1>プロフィール編集</h1>
  </div>

  <div class="page-body">
    <%= render "devise/shared/error_messages", resource: (@profile || Profile.new) %>

    <section class="settings-section">

      <%= form_with model: @profile, url: profile_path, method: :patch, class: "settings-form" do |f| %>
        <div class="form-group">
          <%= f.label :display_name, "表示名" %>
          <%= f.text_field :display_name %>
        </div>

        <div class="form-group">
          <%= f.label :bio, "ひとこと" %>
          <%= f.text_area :bio, rows: 4 %>
        </div>

        <div class="form-group">
          <%= f.label :avatar, "アイコン画像（任意）" %>
          <%= f.file_field :avatar, accept: "image/*" %>
        </div>

        <div class="form-actions">
          <%= f.submit "更新する", class: "primary-btn" %>
        </div>
      <% end %>

      <div class="settings-subnav">
        <%= link_to "ユーザー設定へ戻る", settings_path, class: "sub-link" %>
      </div>
    </section>
  </div>
</div>

<%= render "shared/back_to_board" %>
