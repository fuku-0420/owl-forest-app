<div class="page-container user-settings-page">
  <div class="page-header">
    <h1>メールアドレス変更</h1>
  </div>

  <div class="page-body">
    <% if notice.present? %>
      <p class="notice"><%= notice %></p>
    <% end %>

    <% if alert.present? %>
      <p class="alert"><%= alert %></p>
    <% end %>

    <%= render "devise/shared/error_messages", resource: @user %>

    <section class="settings-section">
      <!--  現在のメールを別枠で明示 -->
      <p class="form-note">
        現在のメールアドレス：
        <strong><%= @user.email %></strong>
      </p>

      <%= form_with model: @user,
            url: users_email_path,
            method: :patch,
            class: "settings-form" do |f| %>

        <div class="form-group">
          <%= f.label :email, "新しいメールアドレス" %>
          <!-- ✅ ここが上級：初期値を空にして違和感消す -->
          <%= f.email_field :email, value: "", autocomplete: "email", placeholder: "new@example.com" %>
        </div>

        <div class="form-group">
          <%= f.label :current_password, "現在のパスワード（変更の保存に必要）" %>
          <%= f.password_field :current_password, autocomplete: "current-password" %>
        </div>

        <div class="form-actions">
          <%= f.submit "更新する", class: "primary-btn" %>
        </div>
      <% end %>

      <div class="settings-subnav">
        <%= link_to "ユーザー設定へ戻る", settings_path, class: "sub-link" %>
      </div>
    </section>
  </div>
</div>

<%= render "shared/back_to_board" %>
